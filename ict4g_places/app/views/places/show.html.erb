<p id="notice"><%= notice %></p>

<p>
  <b>Name:</b>
  <%= @place.name %>
</p>

<p>
  <b>Mark:</b>
  <%= @place.mark %>
</p>

<p>
  <b>Latitude:</b>
  <%= @place.latitude %>
</p>

<p>
  <b>Longitude:</b>
  <%= @place.longitude %>
</p>

<p>
  <b>Comments:</b>
  <hr>
  <% @place.comments.each do |comment| %>
    <h4><%= comment.title %></h4>
    <p><%= comment.content %></p>
    <hr>
  <% end %>
</p>

<%= link_to 'Edit', edit_place_path(@place) %> |
<%= link_to 'Back', places_path %>
